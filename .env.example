# mcp-git Configuration Example
# Copy this file to .env and fill in your values

# =============================================================================
# Workspace Configuration
# =============================================================================
# Root directory for git workspaces
MCP_GIT_WORKSPACE_PATH=/tmp/mcp-git/workspaces

# Maximum workspace size in bytes (default: 10GB)
MCP_GIT_WORKSPACE_MAX_SIZE_BYTES=10737418240

# Workspace retention time in seconds (default: 3600 = 1 hour)
MCP_GIT_WORKSPACE_RETENTION_SECONDS=3600

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite database path
MCP_GIT_DATABASE_PATH=/tmp/mcp-git/database/mcp-git.db

# Task retention time in seconds (default: 3600 = 1 hour)
MCP_GIT_TASK_RETENTION_SECONDS=3600

# =============================================================================
# Server Configuration
# =============================================================================
# Server host (default: 127.0.0.1)
MCP_GIT_SERVER_HOST=127.0.0.1

# Server port (default: 3001)
MCP_GIT_SERVER_PORT=3001

# =============================================================================
# Git Configuration
# =============================================================================
# Git access token (for private repositories)
# Supports both GIT_TOKEN and MCP_GIT_GIT_TOKEN
GIT_TOKEN=
# MCP_GIT_GIT_TOKEN=

# Default clone depth (default: 1 = shallow clone)
MCP_GIT_DEFAULT_CLONE_DEPTH=1

# =============================================================================
# Execution Configuration
# =============================================================================
# Maximum concurrent tasks (default: 10)
MCP_GIT_MAX_CONCURRENT_TASKS=10

# Task timeout in seconds (default: 300 = 5 minutes)
MCP_GIT_TASK_TIMEOUT=300

# Worker count for task execution (default: 4)
MCP_GIT_WORKER_COUNT=4

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
MCP_GIT_LOG_LEVEL=INFO

# =============================================================================
# Security Configuration
# =============================================================================
# Enable strict path validation (default: true)
MCP_GIT_STRICT_PATH_VALIDATION=true

# Enable credential masking in logs (default: true)
MCP_GIT_MASK_CREDENTIALS=true
